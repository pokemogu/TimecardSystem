{
  "name": "timecard-system",
  "version": "v0.1.1",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev-backend": "npm run --workspace=backend dev-auto",
    "dev-frontend": "npm run --workspace=frontend dev",
    "dev": "npm-run-all --parallel dev-backend dev-frontend",
    "typecheck-backend": "npm run --workspace=backend typecheck",
    "typecheck-frontend": "npm run --workspace=frontend typecheck",
    "typecheck": "npm-run-all --sequential typecheck-backend typecheck-frontend",
    "build-backend": "npm run --workspace=backend build",
    "build-frontend": "npm run --workspace=frontend build",
    "build": "npm-run-all --sequential build-backend build-frontend"
  },
  "private": true,
  "dependencies": {
    "backend": "^0.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}