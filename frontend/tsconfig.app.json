{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "../backend/src/APIInterfaces.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": "..",
    "paths": {
      "shared/APIInterfaces": [
        "../backend/src/APIInterfaces"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "es2017"
    ],
    "types": [
      "pinia-plugin-persist"
    ]
  }
}